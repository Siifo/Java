    <section id="form">
        <div class="container mt-5 pt-5">
            <div class="row">
              <div class="col-12 col-sm-7 col-md-6 m-auto">
                <div class="card border-0 shadow">
                  <div class="card-body">
                    <form action="/modificarProducto" method="POST">
                      <h2 class="text-center mb-5">Consultar Producto</h2>
                      <!--Registrar activo-->
                      <ul>
                        <% for (const result of results) { %>
                            <input type="number" class="form-control my-4 py-2" name="id" id="id" key="<%= result.idProductos %>" value="<%= result.idProductos %>" hidden>
                            <br>  
                            <input type="text" class="form-control my-4 py-2" name="nombreProducto" id="nombreProducto" value="<%= result.nombreProducto %>">
                            <br>
                            <!-- <input type="datetime" class="form-control my-4 py-2" name="fechaEntrega" id="fechaEntrega" value="<%= result.fechaEntrega %>"> 
                            <br> -->
                            <input type="number" class="form-control my-4 py-2"  name="precioCompra" id="precioCompra" value="<%= result.precioCompra %>">    
                            <br>
                            <input type="number" class="form-control my-4 py-2" name="cantidad" id="cantidad"  value="<%= result.cantidad%>">
                            <br>
                            <input type="text" class="form-control my-4 py-2" name="estado" id="estado" value="<%= result.estado %>">
                            <div class="d-flex justify-content-around">
                              <button class="btn btn-primary" type="submit" ><a href="/delete/<%= result.idProductos %>" class="text-white">Eliminar Producto</a></button>
                              <button class="btn btn-primary text-white"  type="submit">Modificar Producto</button>
                            </div>
                            <% } %>
                    </ul>
                    </form>
                    <br>
                  </div>
                </div>
              </div>
            </div>
          </div>
    </section>
    <script >
        const results = JSON.parse(document.querySelector("body").dataset.results);
        for (const result of results){
            const input = document.createElement("input")
            input.type= "text";
            input.key = result.idProductos;
            input.value = result.idProductos;
            const li = document.createElement("li");
            li.appendChild(input);
            
            document.getElementById('buscarConsultaPro').appendChild(li)
        }
    </script>
</body>
